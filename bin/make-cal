#!/usr/bin/env raku

use Calendar;

if not @*ARGS {
    print qq:to/HERE/;
    Usage: {$*PROGRAM.basename} caldat

    Runs the Linux 'cal' program and prints results to stdout
    HERE
    exit;
}

my $debug  = 0;
my $caldat = 0;
for @*ARGS {
    when /:i c/ { ++$caldat }
    when /:i d/ { ++$debug  }
    default {
        die "FATAL: Unknown arg '$_'"
    }
}

if $caldat {
    my $year = 2023;
    my $lang = 'en';
    my $o = Calendar.new: :$year, :$lang;
    $o.caldata :$debug;
    exit;
}


